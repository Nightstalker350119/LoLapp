<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.norbertotaveras.game_companion_app.SummonerSearchResultsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginEnd="22dp"
            app:expandedTitleMarginStart="22dp"
            android:layout_marginBottom="0dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginHorizontal="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent">

                <com.norbertotaveras.game_companion_app.RoundImageView
                    android:id="@+id/profile_icon"
                    android:scaleType="fitCenter"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/summoner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/summoner_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="level"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/tier_icon_0"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:id="@+id/rank_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/league_points_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LP"/>

                    <TextView
                        android:id="@+id/win_loss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"/>

                </LinearLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/textColorDim"
            app:tabIndicatorColor="#FF2794D2"
            app:tabSelectedTextColor="#FF2794D2"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <com.norbertotaveras.game_companion_app.AnimatedMenuFab
            android:id="@+id/summoner_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icons8_filter_24"
            android:tint="@color/textColorPrimary"
            app:backgroundTint="@color/colorPrimary"/>

        <com.norbertotaveras.game_companion_app.AnimatedMenuFab
            android:id="@+id/champs_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/icons8_filter_24"
            android:tint="@color/textColorPrimary"
            app:backgroundTint="@color/colorPrimary"/>

        <com.gordonwong.materialsheetfab.DimOverlayFrameLayout
            android:id="@+id/dim_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <io.codetail.widget.RevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|bottom"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/summoner_filter_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp">

                <LinearLayout
                    android:id="@+id/match_filter_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:id="@+id/match_filter_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/match_filter_ranked_solo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranked Solo"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/match_filter_ranked_flex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ranked Flex"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/match_filter_normal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/match_filter_aram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ARAM"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/match_filter_event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event"
                        android:padding="12dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/champ_sort_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp">

                <LinearLayout
                    android:id="@+id/champ_sort_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:id="@+id/champ_sort_by_champion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sort by name"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/champ_sort_by_points"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sort by points"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/champ_sort_by_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sort by level"
                        android:padding="12dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </io.codetail.widget.RevealLinearLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
