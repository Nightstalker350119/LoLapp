<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.norbertotaveras.game_companion_app.RoundImageView
            android:id="@+id/champion_icon"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/spell0"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/spell1"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rune0"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/rune1"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/summoner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/textColorBold"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kda"
                    android:textColor="@color/textColorBold"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/kda_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="0:0"
                    android:textColor="@color/textColorBold"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">
            <ImageView
                android:id="@+id/items0"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
            <ImageView
                android:id="@+id/items6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="unk"
                android:textColor="@color/textColorBold"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="/"
                android:textColor="@color/textColorBold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/gold_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="$$$"
                android:textColor="@color/textColorBold"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>