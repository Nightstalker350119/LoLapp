<?xml version="1.0" encoding="utf-8"?>
<com.norbertotaveras.game_companion_app.NestedParentView
    android:id="@+id/nested_scroll_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.norbertotaveras.game_companion_app.SummonerSearchResultsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/profile_icon"
                android:scaleType="fitCenter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_margin="4dp">
                <TextView
                    android:id="@+id/summoner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/champion"/>
                <TextView
                    android:id="@+id/summoner_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blah_blah_blah"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TabHost
                android:id="@+id/tab_scr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TabWidget>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:id="@+id/tab_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:orientation="vertical">
                        <com.norbertotaveras.game_companion_app.AutoSizeViewPager
                            android:id="@+id/league_pager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.norbertotaveras.game_companion_app.AutoSizeViewPager>
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="parent">
                            <LinearLayout
                                android:layout_width="510dp"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/game_filter_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total"
                                    android:textAllCaps="false"/>
                                <Button
                                    android:id="@+id/game_filter_ranked_solo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ranked_solo"
                                    android:textAllCaps="false"/>
                                <Button
                                    android:id="@+id/game_filter_ranked_flex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/ranked_flex"
                                    android:textAllCaps="false"/>
                                <Button
                                    android:id="@+id/game_filter_draft_blind"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/normal_draft_blind"
                                    android:textAllCaps="false"/>
                                <Button
                                    android:id="@+id/game_filter_aram"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/aram"
                                    android:textAllCaps="false"/>
                                <Button
                                    android:id="@+id/game_filter_event"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/event"
                                    android:textAllCaps="false"/>
                            </LinearLayout>
                        </HorizontalScrollView>

                        <com.norbertotaveras.game_companion_app.NestedListView
                            android:id="@+id/match_list"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"/>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/match_list_no_results"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="16dp"
                            android:paddingBottom="16dp"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/match_list_no_results_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textSize="24dp"
                                android:text=" &#x26a0; "/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/match_list_no_results_icon"
                                android:textSize="12dp"
                                android:text=" There are no results "/>
                        </android.support.constraint.ConstraintLayout>
                    </LinearLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab_champs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/b"/>
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/tab_runes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="56dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c"/>
                    </android.support.constraint.ConstraintLayout>
                </FrameLayout>
            </TabHost>
        </LinearLayout>
    </LinearLayout>
</com.norbertotaveras.game_companion_app.NestedParentView>
