<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.norbertotaveras.game_companion_app.SummonerSearchResultsActivity">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Champion"
            app:layout_constraintStart_toEndOf="@id/profile_icon"
            app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TabHost
            android:id="@+id/tab_scr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TabWidget>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/tab_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/level_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textAlignment="textEnd"
                        android:minWidth="100dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/level"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minWidth="100dp"
                        app:layout_constraintStart_toEndOf="@id/level_title"
                        app:layout_constraintTop_toTopOf="@id/level_title"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tier_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:minWidth="100dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@id/level"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Tier"/>
                    <TextView
                        android:id="@+id/tier"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:minWidth="100dp"
                        app:layout_constraintStart_toEndOf="@id/tier_title"
                        app:layout_constraintTop_toTopOf="@id/tier_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="X"/>

                    <TextView
                        android:id="@+id/league_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:minWidth="100dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tier_title"
                        android:text="League name"/>
                    <TextView
                        android:id="@+id/league"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/league_title"
                        app:layout_constraintStart_toEndOf="@id/league_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="X"/>

                    <TextView
                        android:id="@+id/queue_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:minWidth="100dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/league_title"
                        android:text="Queue name"/>
                    <TextView
                        android:id="@+id/queue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="@id/queue_title"
                        app:layout_constraintStart_toEndOf="@id/queue_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="X"/>

                    <!--TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whatever"
                        android:textAlignment="textEnd"
                        android:minWidth="100dp"/>
                    <TextView
                        android:id="@+id/whatever"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" /-->
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/tab_champs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:orientation="vertical">
                    android:id="@+id/tab_champs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B"/>
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/tab_runes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="C"/>
                </android.support.constraint.ConstraintLayout>
            </FrameLayout>
        </TabHost>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
