<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.norbertotaveras.game_companion_app.SummonerSearchResultsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginEnd="22dp"
            app:expandedTitleMarginStart="22dp"
            android:layout_marginBottom="0dp"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_collapseMode="pin"
                android:layout_marginTop="75dp">
                <LinearLayout
                    android:id="@+id/season_card_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:background="#28FFFFFF">
                    <TextView
                        android:id="@+id/season_num_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="S0"/>
                    <TextView
                        android:id="@+id/season_achieved_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="normal"
                        android:text="Challenger"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/season_card_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:background="#28FFFFFF">
                    <TextView
                        android:id="@+id/season_num_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="S0"/>
                    <TextView
                        android:id="@+id/season_achieved_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="normal"
                        android:text="Challenger"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/season_card_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:background="#28FFFFFF">
                    <TextView
                        android:id="@+id/season_num_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="S0"/>
                    <TextView
                        android:id="@+id/season_achieved_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textStyle="normal"
                        android:text="Challenger"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.norbertotaveras.game_companion_app.RoundImageView
                        android:id="@+id/profile_icon"
                        android:scaleType="fitCenter"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:layout_margin="4dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="4dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/summoner_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textSize="18dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/summoner_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="level"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/tier_icon_0"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="8dp">

                        <TextView
                            android:id="@+id/rank_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rank"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/league_points_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LP"/>

                        <TextView
                            android:id="@+id/win_loss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="999"/>

                    </LinearLayout>
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/textColorDim"
            app:tabIndicatorColor="#FF2794D2"
            app:tabSelectedTextColor="#FF2794D2"
            android:background="#801F3240"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/fab_filter_container">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_action_plus"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:scaleType="center"
            android:backgroundTint="@color/colorPrimary"
            android:tooltipText="Roles" />

        <FrameLayout
            android:id="@+id/fab_filter_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="71dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="All"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fab_filter_solo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="121dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Solo"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <!-- Top Button -->
        <FrameLayout
            android:id="@+id/fab_filter_flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="171dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Flex"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fab_filter_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Norm"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fab_filter_aram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="16dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Aram"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fab_filter_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="71dp"
            android:visibility="invisible">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Snow"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:id="@+id/fab_sort_container">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_action_plus"
            android:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:scaleType="center"
            android:backgroundTint="@color/colorPrimary"
            android:tooltipText="Roles" />

        <FrameLayout
            android:id="@+id/fab_sort_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="121dp"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Points"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fab_sort_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:layout_marginBottom="171dp"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:pressedTranslationZ="12dp"
                android:tooltipText="Bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="Level"
                android:textColor="#FFFFFFFF"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fab_sort_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="71dp"
            android:layout_marginEnd="@dimen/fab_margin_right"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:tooltipText="Bottom"
                app:pressedTranslationZ="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="8dp"
                android:enabled="true"
                android:text="Name"
                android:textColor="#FFFFFFFF" />
        </FrameLayout>
    </FrameLayout>

