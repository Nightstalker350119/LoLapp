<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/profile_icon">

                <TextView
                    android:id="@+id/summoner_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="summoner"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="level" />
            </LinearLayout>
            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜…"
                android:textSize="36dp"
                app:layout_constraintEnd_toEndOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/queue_summary_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/queue_name_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranked Solo"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <ImageView
                android:id="@+id/tier_icon_0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/rank_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Rank"/>
            <TextView
                android:id="@+id/league_points_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="LP"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/queue_summary_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/queue_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranked Solo"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <ImageView
                android:id="@+id/tier_icon_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/rank_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Rank"/>
            <TextView
                android:id="@+id/league_points_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="LP"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/queue_summary_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/queue_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ranked Solo"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <ImageView
                android:id="@+id/tier_icon_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/rank_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="Rank"/>
            <TextView
                android:id="@+id/league_points_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="LP"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
