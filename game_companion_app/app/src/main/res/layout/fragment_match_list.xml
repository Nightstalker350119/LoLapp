<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="4dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/summary_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/player_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.norbertotaveras.game_companion_app.RoundImageView
                    android:id="@+id/champion_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="4dp" />
                <com.norbertotaveras.game_companion_app.RoundTextView
                    android:id="@+id/champion_level"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/spell0"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="1dp" />
                    <ImageView
                        android:id="@+id/spell1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="1dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/rune0"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="1dp" />
                    <ImageView
                        android:id="@+id/rune1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="1dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">
                <TextView
                    android:id="@+id/kda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="K / D / A"
                    android:textColor="#FF000000"/>
                <TextView
                    android:id="@+id/kda_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="X:X"
                    android:textColor="#FF000000" />
                <TextView
                    android:id="@+id/special_kills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="specialkills"
                    android:textColor="#FF000000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/player_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/game_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Game mode"
                    android:textColor="#FF0000EE"/>
                <TextView
                    android:id="@+id/game_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#FF000000"/>
                <TextView
                    android:id="@+id/game_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:text="#nnnn"/>
                <TextView
                    android:id="@+id/game_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:textColor="#FF000000" />
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
