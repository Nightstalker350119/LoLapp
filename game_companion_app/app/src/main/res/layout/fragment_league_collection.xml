<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.norbertotaveras.game_companion_app.LeagueCollectionFragment">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/tab_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/queue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="queue name" />
        <ImageView
            android:id="@+id/tier_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/queue_name"/>

        <TextView
            android:id="@+id/tier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tier_icon"
            android:text="tier"/>

        <!--TextView
            android:id="@+id/league"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/league_title"
            app:layout_constraintStart_toEndOf="@id/league_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="X"/>

        <TextView
            android:id="@+id/queue_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:minWidth="100dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/league_title"
            android:text="Queue name"/>
        <TextView
            android:id="@+id/queue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/queue_title"
            app:layout_constraintStart_toEndOf="@id/queue_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="X"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whatever"
            android:textAlignment="textEnd"
            android:minWidth="100dp"/>
        <TextView
            android:id="@+id/whatever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" /-->

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
