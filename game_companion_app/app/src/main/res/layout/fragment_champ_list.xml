<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:theme="@style/DarkTextOnLight"
    android:background="#FFFFFF"
    android:layout_marginBottom="4dp">

    <com.norbertotaveras.game_companion_app.RoundImageView
        android:id="@+id/champion_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/champion_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/champion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>

        <TextView
            android:id="@+id/champion_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"/>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/level"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="level"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>